                            .btn.btn-clean(type="submit") Limpiar
                        label(for="nombre") Nombre
                            input(type='text')#nombre
                        label(for="rfc") RFC
                            input(type='text')#rfc
                        label(for="contacto") Contacto
                            input(type='text')#contacto
