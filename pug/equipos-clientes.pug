            nav(aria-label='...')
              ul.pagination
                li.page-item.disabled
                a.page-link Previous
                li.page-item
                a.page-link(href='#') 1
                li.page-item.active(aria-current='page')
                a.page-link(href='#') 2
                li.page-item
