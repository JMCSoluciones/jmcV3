                    .content__CtrlClientes__tabs__item
                        .content__CtrlClientes__tabs__item__header#usuario-header
                            h3 Nombre
                            form.d-flex(role="search")
                                input.form-control.me-2(type="search" placeholder="Search" aria-label="Search")
                                a(href='busqueda.html') 
                                    .btn.btn-dark(type="submit") Buscar
                                input.btn-clean(type="reset" value="Limpiar") 
                        .content__CtrlClientes__tabs__item__body
                            .table-wrapper.content__CtrlClientes__tabs__item__body__table
                                table.table.table-striped.table-hover
                                    thead 
                                        tr                  
                                            th Id
                                            th Nombre
                                            th Correo
                                            th Detalles
                                            th Acciones
                                    tbody 
                                        tr 
                                            td 01
                                            td Josue Martinez
                                            td josue@jmcsoluciones.com
                                            td
                                                button.btn-mas(type='button' data-bs-toggle='modal' data-bs-target='#Modalmas') Ver más
                                            td
                                                    i.material-icons.btn-modificar(data-bs-toggle='modal' data-bs-target='#Modalmodificar')  &#xE254;
                                                    i.material-icons.btn-delete(data-bs-toggle='modal' data-bs-target='#Modaldelete')  &#xE872;
                                        tr 
                                            td 02
                                            td cliente 2
                                            td 23/octubre/2023
                                            td 
                                                button.btn-mas(type='button' data-bs-toggle='modal' data-bs-target='#Modalmas') Ver más
                                            td
                                                    i.material-icons.btn-modificar(data-bs-toggle='modal' data-bs-target='#Modalmodificar')  &#xE254;
                                                    i.material-icons.btn-delete(data-bs-toggle='modal' data-bs-target='#Modaldelete')  &#xE872;
                        .content__CtrlCotizaciones__tabs__item__footer
                            nav(aria-label='...')
                                ul.pagination
                                    li.page-item.disabled
                                    a.page-link Previous
                                    li.page-item
                                    a.page-link(href='#') 1
                                    li.page-item.active(aria-current='page')
                                    a.page-link(href='#') 2
                                    li.page-item
                                    a.page-link(href='#') 3
                                    li.page-item
                                    a.page-link(href='#') Next   
            a(href="inicioAdmin.html") 
                button.btn.btn-exit(type="submit")#salir Salir
                            //MODAL
        #Modalmodificar.modal.fade(class="modal fade" tabindex='-1' aria-labelledby='modalmodificarLabel')
