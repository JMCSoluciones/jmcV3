extend ../components/template-admin.pug
block content
    include control-menuAdmin.pug
    .content__CtrlClientes
        .content__CtrlClientes-box
            h3.title Control de clientes 
                button.btn-primary(type='button' data-bs-toggle='modal' data-bs-target='#Modalnuevo') Nuevo
        #Modalnuevo.modal.fade(class="modal fade" tabindex='-1' aria-labelledby='modalnuevoLabel')
            .modal-dialog(role='document')
                .modal-content
                    .modal-header
                        h1#Modagitlnuevo Recuperar Contraseña
                        button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
                            span(aria-hidden='true') &times;
                    .modal-body
                        form#forgotPasswordForm(onsubmit='submitForm(event)')
                        label(for='text') Si has olvidado tu contraseña pueder restablecera aquí
                        // Pregunta de seguridad
                        input(type='email', id='', name='', placeholder='Correo Electrónico')
                    .modal-footer
                        a(href="login.html")
                            button(type='submit') Enviar
        .content__CtrlClientes__tabs
            #myTabContent.tab-content
