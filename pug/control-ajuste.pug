        a(href="control-ajuste.html") 
            button(type="submit")#botonSalir Salir
        #Modalservcio.modal.fade(class="modal fade" tabindex='-1' aria-labelledby='modalservicioLabel')
            .modal-dialog.modal-dialog-centered
                .modal-content
                    .modal-header
                        h1#Modagicontrato Añadir Nuevo Servicio
                        button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
                    .modal-body
                        .servicio
                            label(for='Nombre') Id 
                            select#autoSizingSelect.form-select
                                option(selected='')  
                                option(value='1') Uno
                                option(value='2') Dos
                                option(value='3') Tres
                        .servicio
                            label(for='nombre') Nombre
                            input.form-servicio(type='text' placeholder='Ingrese su nombre' aria-label='')
                        .servicio
                            label(for='Nombre') Costo
                            select#autoSizingSelect.form-costo
                                option(selected='') 
                                option(value='1') Uno
                                option(value='2') Dos
                                option(value='3') Tres
                        .servicio
                            label(for='concepto') Moneda
                            input#concepto.form-servicio(type='text' name='concepto' placeholder='Ingrese el monto')
                            button#valida(onclick='validarMoneda()') Validar
                        
                        .servicio
                            label(for='total') Plan
                            select#autoSizingSelect.form-plan
                                option(selected='') 
                                option(value='1') Uno
                                option(value='2') Dos
                                option(value='3') Tres
                        .servicio
                            label(for='descripcion') Descripci&oacute;n:
                            textarea#descripcion(name='descripcion' rows='4' cols='50' placeholder='Ingrese la descripción aquí...')
                    .modal-footer
                                .botones  
                                    button.btn-guarda(type='button' data-bs-toggle='modal' data-bs-target='#Modalguarda') Guardar
                                    button.btn-cancela(type='button' data-bs-toggle='modal' data-bs-target='#Modalcancela') Cancelar 
        #Modalguarda.modal.fade(class="modal fade" tabindex='-1' aria-labelledby='modalguardaLabel')
            .modal-dialog.modal-dialog-centered
                .modal-content
                        .modal-header
