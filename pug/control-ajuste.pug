                            button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
                        .modal-body
                            h5 Guardado!
                        .modal-footer
                            a(href="control-ajuste.html") 
                                button.btn.btn-secondary#mGuardar(type="button" data-bs-dismiss="modal") Aceptar
        #Modalcancela.modal.fade(class="modal fade" tabindex='-1' aria-labelledby='modalcancelaLabel')
