extend ../components/template-admin.pug
block content
    include control-menuAdmin.pug
    .container__controlajuste 
        .container__controlajuste__administrador
            .container__controlajuste__administrador-wrapper
                .container__controlajuste__administrador__title
                    h1 Control de ajustes
                    .container__controlajuste__administrador__title__box
                        a(href="control-ajuste.html") Servicios
                            img.staff(src="/Images/Icons/servicio.svg", alt="ajustes de servicio")
                    .container__controlajuste__administrador__title__box
                        a(href="control-staff.html") Staff
                            img.staff(src="/Images/Icons/staff.svg", alt="ajustes de staff") 
                .container__controlajuste__administrador__title
                    h2 Control de servicios
                    button.btn.btn-servicio(type='button' data-bs-toggle='modal' data-bs-target='#Modalservcio' ) add 
                table.table.table-striped.table-hover
                    thead
                      tr
                            th Id
                            th Nombre
                            th Descripcion
                            th Costo
                            th Detalles
                            th Acción
                    tbody
                        tr
                            td 1
                            td Fran Wilson
