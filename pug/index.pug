extend ../components/template.pug
block content
    .content 
        .content__section-slide
            section(data-bs-ride="carousel").content__slides.carousel.slide.carousel-fade#carouselExampleFade
                .carousel-inner
                    .carousel-item.active
                        picture.carousel-item__img
                            source(media="(min-width:1110px)" srcset="images/Desktop/desktopSlidesIndex-1920x466.jpg")
                            source(media="(min-width:768px)" srcset="images/Tablet/tabletSlidesIndex-1110x466.jpg")
                            img(src="/imagenes/principal.png" alt="Imgagen de pallets").d-block.w-100                    
        .content__section-soluciones
            p.content__section-soluciones-title.title Soluciones   
            p.content__section-soluciones-txt #[strong Web] 
        .content__section-dominios
            img(src="/imagenes/dominios.png", alt="dominios")
            .content__section-dominios__box
                p.content__section-dominios__box-title Dominios
                p.content__section-dominios__box-txt #[strong Registra] el nombre de tu empresa u organización, nosotros te ayudamos.
        .content__section-hosting
            img(src="/imagenes/dominios.png", alt="hosting")
            .content__section-hosting__box
                p.content__section-hosting__box-title.title Hosting
                p.content__section-hosting__box-txt  Hosting extremadamente #[strong rápido] y lleno de #[strong funciones]           
        .content__section-correo
            img(src="/imagenes/correo.png", alt="correo electrónico")
            .content__section-correo__box
                p.content__section-correo__box-title.title Correo #[strong electrónico]
                p.content__section-correo__box-txt Usa #[strong cuentas profesionales] con tu propio dominio                
        .content__section-pagina
            img(src="/imagenes/dominios.png", alt="página web")
            .content__section-pagina__box
                p.content__section-pagina__box-title.title Creamos tu #[strong página web]
                p.content__section-pagina__box-txt #[strong Diseñamos] y desarrollamos tu página web #[strong a la medida]     
        .content__section-arquitectura
            p.content__section-arquitectura-title.title #[strong Arquitectura] 
        .content__section-servidores
            img(src="/imagenes/dominios.png", alt="servidores")
            .content__section-servidores__box
                p.content__section-servidores__box-title.title #[strong Servidores]    
