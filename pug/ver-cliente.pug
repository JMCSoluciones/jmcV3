          label(for="estado") Estado  
          label(for="municipio") Municipio 
          label(for="cp") Código Postal  
          label(for="rf") Regimen Fiscal 
          label(for="tel") Teléfono  
          label(for="contacto") Contacto 
          label(for="correo") Correo Electrónico
      .final
        a(href="") 
          button.btn.btn-eliminar(type="submit")#eliminar Eliminar
        a(href="") 
          button.btn.btn-modificar(type="submit")#modificar Modificar