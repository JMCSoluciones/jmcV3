block content
    include control-menuAdmin.pug
    .verCliente
      h2 Informacion del cliente 
      .botones 
        .botones__contratos
          a(href="#")  
            p Contratos 
            img(src="/Images/Icons/contratos.svg", alt="")
        .botones__pagos
          a(href="#")    
            p Pagos 
            img(src="/Images/Icons/pagos.svg", alt="")
        .botones__ticket
          a(href="#")  
            p Tickets
            img(src="/Images/Icons/tickets.svg", alt="")
        .botones__imprimir
          a(href="#")  
            p Imprimir 
            img(src="/Images/Icons/imprimir.svg", alt="")
